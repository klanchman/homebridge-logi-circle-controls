{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "skipLibCheck": true,

    "noEmitOnError": true,
    "strict": true
  },
  "include": ["./src/**/*"]
}
